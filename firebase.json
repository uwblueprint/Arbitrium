{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": [
    {
      "target": "production",
      "public": "build",
      "rewrites": [
        {
          "source": "**",
          "function": "api",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "qa",
      "public": "build",
      "rewrites": [
        {
          "source": "**",
          "function": "api",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "production2",
      "public": "build",
      "rewrites": [
        {
          "source": "**",
          "function": "api",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "seniors",
      "public": "build",
      "rewrites": [
        {
          "source": "**",
          "function": "api",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
